{
  "name": "newtabtext",
  "description": "WebExtensions extension that adds a simple text editor to your new tab page",
  "keywords": [
    "WebExtensions",
    "extension",
    "firefox",
    "newtab"
  ],
  "author": "equokka",
  "license": "MIT",
  "version": "0.0.3",
  "scripts": {
    "lint": "npm-run-all -s -c lint-task:*",
    "lint-task:js": "eslint . --fix",
    "lint-task:css": "stylelint . --fix",
    "lint-task:html": "htmlhint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint",
    "*.{css,scss,sass}": "stylelint",
    "*.{html,htm}": "htmlhint"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^5.16.0",
    "htmlhint": "^0.11.0",
    "husky": "^1.3.1",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.3.0"
  }
}
